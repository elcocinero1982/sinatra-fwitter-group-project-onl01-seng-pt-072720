<!doctype html>
<html>
  <head>
    <title>Fwitter</title>
  </head>
  <body>

    <div class="container">
      <h1>Welcome to Fwitter!</h1>
      <h2>This is located in layout.erb!</h2>
      <h2>Don't forget to <strong>yield</strong> your views!</h2>
    </div>
<nav>
    <a button type="button" class="navbtn btn btn-default" href="/tweets">View All Tweets</a>
<a button type="button" class="navbtn btn btn-default" href="/tweets/new">Create a New Tweet</a>
    <% if logged_in? %>
    <a button type="button" class="navbtn btn btn-default" href="/users/<%= current_user.slug %>">User Info.</a>
    <a button type="button" class="navbtn btn btn-default" href="/logout">Logout</a>
    <% else %>
      <a button type="button" class="navbtn btn btn-default" href="/login">Login</a>
      <a button type="button" class="navbtn btn btn-default" href="/signup">Signup</a>
    <% end %>
  </nav>

<%= yield %>
  </body>
</html>
